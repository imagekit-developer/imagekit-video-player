// packages/video-player/tsconfig.json (The one for Angular)
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "ES2022",
      "dom"
    ],
    "baseUrl": ".",
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "compilationMode": "full"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist/**/*", // Exclude the dist folder to prevent circular dependencies
    "react-wrapper/**/*",
    "vue/**/*"
  ]
}