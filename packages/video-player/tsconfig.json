// packages/video-player/tsconfig.json (The one for Angular)
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "ES2022",
      "dom"
    ],
    // --- KEY CHANGES BELOW ---
    "baseUrl": ".",
    // "paths": {
    //   "../javascript": [
    //     "./dist/index.d.ts" // Point to the TSUP-generated type definition file
    //   ]
    // }
  },
  "angularCompilerOptions": {
    "compilationMode": "full"
  },
  "include": [
    "angular/**/*.ts" // ONLY compile the angular source files
  ],
  "exclude": [
    "dist/**/*", // Exclude the dist folder to prevent circular dependencies
    "react-wrapper/**/*",
    "vue/**/*"
  ]
}