{
  "name": "@imagekit/video-player",
  "version": "1.0.0",
  "description": "Core ImageKit Video Player + framework-specific wrappers (React, Angular)",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:tsup && pnpm run build:css && pnpm run build:angular",
    "build:tsup": "tsup --tsconfig tsconfig.tsup.json",
    "build:angular": "ng-packagr -p ng-package.json",
    "build:css": "sass --load-path=./node_modules javascript/styles/index.scss dist/styles.css",
    "dev": "pnpm run build && (pnpm run dev:tsup & pnpm run dev:css & pnpm run dev:angular)",
    "dev:tsup": "tsup --tsconfig tsconfig.tsup.json --watch",
    "dev:angular": "ng-packagr -p ng-package.json --watch",
    "dev:css": "sass --watch --load-path=./node_modules javascript/styles/index.scss dist/styles.css"
  },
  "peerDependencies": {
    "@angular/common": "^17.0.0 || ^18.0.0 || ^20.0.0",
    "@angular/core": "^17.0.0 || ^18.0.0 || ^20.0.0",
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18",
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    },
    "@angular/common": {
      "optional": true
    }
  },
  "devDependencies": {
    "@angular/compiler-cli": "^20.0.0",
    "@imagekit/javascript": "^5.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "ng-packagr": "^20.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.75.0",
    "tsup": "^8.3.5",
    "typescript": "~5.8.0",
    "video.js": "^8.20.0",
    "vue": "^3.0.0"
  }
}