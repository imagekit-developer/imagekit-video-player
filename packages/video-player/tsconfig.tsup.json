{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "vue": ["./node_modules/vue"]
    }
  },
  "include": ["javascript/**/*", "react-wrapper/**/*", "vue/**/*"],
  "exclude": ["angular/**/*"]
}
